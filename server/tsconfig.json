{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../dist",
    "lib": ["es6", "dom", "esnext"],
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "sourceMap": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "pretty": true
  },
  "exclude": ["node_modules"]
}
